  <div class="half-section-container-top d-flex">
  </div>
  <div class="half-section-container-bottom d-flex">
  </div>
  <div class="homepage-card-container d-flex flex-column">
    <% @projects.each do |project| %>
      <div class="card homepage-card">
        <%= link_to projects_path(@projects), class: "text-decoration-none text-body" do %>
        <div class="card-name-description d-flex flex-column">
          <h2><%= project.name %>.</h2>
          <p><%= project.description %></p>
